// Black background shader. Also used for some transparent 3D stuff
float4 main(
	float4 aVtxPos,
	float4 aInput1,
	uniform float4x4 proj,
	out float4 vInput1 : TEXCOORD2 
) : POSITION
{
	vInput1 = aInput1;

	if(vInput1 == float4(0.0, 0.0, 0.0, 1.0)) // HACK
		return float4(aVtxPos.xy, -aVtxPos.z, aVtxPos.w);
	else
		return aVtxPos;
}
